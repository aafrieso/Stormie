<%- include('../partials/html-head') %>
<link rel="stylesheet" href="../stylesheets/style.css"></link>
<%- include('../partials/nav') %>

<h1>Your Book Comments!</h1>

<section>
  <h2><%= book.owner.name %>'s Book Comment Post</h2>
  <% book.comments?.forEach(comment => { %>
    <p id="book-comment">
      <%= comment.content %> - <%= comment.commenter.name %>
      <% if (comment.commenter._id.equals(user?.profile._id)) { %>
        <form action="/books/<%= book._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
          <button class="comment-delete-btn">Delete Your Comment</button>
        </form>
      <% } %> 
    </p> 
  <% }) %>
  <form id="txt-comment" action="/books/<%= book._id %>/comments" method="POST">
    <textarea name="content"></textarea><br>
    <button class="add-cmmt-btn">Add Comment</button>
  </form>

</section>
<%- include('../partials/footer') %>
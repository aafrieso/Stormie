<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
<h1>Get Your Local Weather Here!</h1>

<form action="/stormies" method="POST">
  <label>
    Enter Your ZIP Here
    <input type="number" name="zipcode">
  </label>
  <button type="submit">Save Location</button>
</form>

<h2>Your Favorite Locations</h2>
<ul>
  <% stormies.forEach(zipCode => { %> 
    <li>
      <%= zipCode.zipCode %> 
    </li>
    <a href="/stormies/<%= stormie._id %>/edit">
      <button>Edit ZIP</button>
    </a>
  <% }) %> 
</ul>
</section>

